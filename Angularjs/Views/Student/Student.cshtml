
@{
    ViewBag.Title = "Student";
}
 
 @*Add Script Files*@

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Student.js"></script>

<h2>Student Portal</h2>

<div ng-app="myApp">
    <div ng-controller="myCntrl">
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Name:</label>
                            <input type="text" class="form-control" ng-model="SName" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Age</label>
                            <input type="text" class="form-control" ng-model="SAge" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Department</label>
                            <input type="text" class="form-control" ng-model="SDepartment" />
                        </div>
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="button" class="btn btn-info" value="Submit" id="insertStd" ng-click="InsertStudent()" />
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div ng-init="GetAllStudent()">
            <h4 style="text-align:center ">Student Portal Table </h4><br />
             <table class="table table-striped table-hover">
                 <tr>
                     <th>Id</th>
                     <th>Name</th>
                     <th>Age</th>
                     <th>Department</th>
                     <th>Action</th>
                 </tr>
                 <tr ng-repeat="Std in Student">
                     <td>{{Std.Id}}</td>
                     <td>{{Std.Name}}</td>
                     <td>{{Std.Age}}</td>
                     <td>{{Std.Department}}</td>
                     <td>
                         <input type="button" ng-click="UpdateStudent(Std)" value="Update" class="btn btn-warning" />
                         <input type="button" ng-click="DeleteStudent(Std)" value="Delete" class="btn btn-danger" />

                     </td>

                 </tr>
                 
            </table>
        </div>
    </div>

</div>

